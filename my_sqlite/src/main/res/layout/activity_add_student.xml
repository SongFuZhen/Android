<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.my_sqlite.song.AddStudent">


    <ImageView
        android:id="@+id/img"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/addstudent" />

    <!-- 班级ID-->
    <TextView
        android:id="@+id/texclassid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img"
        android:layout_centerVertical="true"
        android:layout_marginTop="25px"
        android:text="班级ID:"
        android:textColor="#000000" />

    <EditText
        android:id="@+id/edtclassid"
        android:layout_width="500px"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img"
        android:layout_centerVertical="true"
        android:layout_marginLeft="40px"
        android:layout_toRightOf="@+id/texclassid" />


    <!--学生ID-->
    <TextView
        android:id="@+id/texstudentid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/texclassid"
        android:layout_centerVertical="true"
        android:layout_marginTop="65px"
        android:text="学生ID:"
        android:textColor="#000000" />

    <EditText
        android:id="@+id/edtstudentid"
        android:layout_width="500px"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edtclassid"
        android:layout_centerVertical="true"
        android:layout_marginLeft="40px"
        android:layout_toRightOf="@+id/texstudentid" />

    <!--学生名称-->
    <TextView
        android:id="@+id/texstudentname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/texstudentid"
        android:layout_centerVertical="true"
        android:layout_marginTop="65px"
        android:text="学生名称:"
        android:textColor="#000000" />

    <EditText
        android:id="@+id/edtstudentname"
        android:layout_width="500px"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edtstudentid"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10px"
        android:layout_toRightOf="@+id/texstudentname" />

    <!--成绩-->
    <TextView
        android:id="@+id/texscore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/texstudentname"
        android:layout_centerVertical="true"
        android:layout_marginTop="65px"
        android:text="成绩:"
        android:textColor="#000000" />

    <EditText
        android:id="@+id/edtscore"
        android:layout_width="500px"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edtstudentname"
        android:layout_centerVertical="true"
        android:layout_marginLeft="65px"
        android:layout_toRightOf="@+id/texscore" />


    <Button
        android:id="@+id/reset"
        android:layout_width="200px"
        android:layout_height="wrap_content"
        android:layout_below="@+id/texscore"
        android:layout_marginLeft="150px"
        android:layout_marginTop="50px"
        android:text="重置" />

    <Button
        android:id="@+id/confirm"
        android:layout_width="200px"
        android:layout_height="wrap_content"
        android:layout_below="@+id/texscore"
        android:layout_marginLeft="50px"
        android:layout_marginTop="50px"
        android:layout_toRightOf="@+id/reset"
        android:text="提交" />
</RelativeLayout>
